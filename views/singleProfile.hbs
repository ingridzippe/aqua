          <form  action="/unfollow/{{this.to._id}}" method="post">
            <input style="display: inline;" type="submit" value="Unfollow">
          </form>
      </div>
    {{/each}}
    </div> -->

    <h4>Bio:</h4>
    <p>{{user.bio}}</p>

    <h4>Events:</h4>
    {{#each events}}
      <div id="signup-box">
        <p>{{displayName}}</p>
        <p>{{eventDate}}</p>
        <p>{{eventLocation}}</p>
        <p>{{eventDescription}}</p>
      </div>
    {{/each}}


</div>
</div>

</body>
